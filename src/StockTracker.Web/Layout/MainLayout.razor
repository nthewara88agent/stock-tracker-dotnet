@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h6">Stock Tracker</MudText>
        <MudSpacer />
        <AuthorizeView>
            <Authorized>
                <MudText Class="mr-4">@context.User.Identity?.Name</MudText>
                <MudButton Color="Color.Inherit" OnClick="Logout">Logout</MudButton>
            </Authorized>
        </AuthorizeView>
    </MudAppBar>
    <AuthorizeView>
        <Authorized>
            <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
                <MudNavMenu>
                    <MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
                    <MudNavLink Href="/holdings" Icon="@Icons.Material.Filled.ListAlt">Holdings</MudNavLink>
                    <MudNavLink Href="/cgt" Icon="@Icons.Material.Filled.Calculate">CGT Report</MudNavLink>
                </MudNavMenu>
            </MudDrawer>
        </Authorized>
    </AuthorizeView>
    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer() => _drawerOpen = !_drawerOpen;

    private async Task Logout()
    {
        var provider = (JwtAuthStateProvider)AuthStateProvider;
        await provider.LogoutAsync();
        Nav.NavigateTo("/login", true);
    }
}
