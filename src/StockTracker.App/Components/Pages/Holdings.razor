@page "/holdings"
@inject PortfolioService Portfolio
@inject DevUserService DevUser
@inject IDialogService DialogService
@inject StockTracker.App.Data.AppDbContext Db
@inject ILogger<Holdings> Logger

<MudText Typo="Typo.h4" Class="mb-4">Holdings</MudText>

<MudButton Variant="Variant.Filled" Color="Color.Primary" Class="mb-4" OnClick="OpenAddDialog">
    Add Holding
</MudButton>

@if (_loading)
{
    <MudProgressCircular Indeterminate="true" />
}
else
{
    <MudTable Items="@_holdings" Dense="true" Hover="true">
        <HeaderContent>
            <MudTh>Ticker</MudTh>
            <MudTh>Buy Date</MudTh>
            <MudTh>Quantity</MudTh>
            <MudTh>Buy Price</MudTh>
            <MudTh>Brokerage</MudTh>
            <MudTh>Actions</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Ticker</MudTd>
            <MudTd>@context.BuyDate.ToString("yyyy-MM-dd")</MudTd>
            <MudTd>@context.Quantity</MudTd>
            <MudTd>@context.BuyPrice.ToString("F2")</MudTd>
            <MudTd>@context.Brokerage.ToString("F2")</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="() => OpenEditDialog(context)" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" Color="Color.Error" OnClick="() => DeleteHolding(context.Id)" />
            </MudTd>
        </RowTemplate>
    </MudTable>
}

@code {
    private List<HoldingDto> _holdings = new();
    private bool _loading = true;
    private string _userId = "";

    protected override async Task OnInitializedAsync()
    {
        _userId = await DevUser.GetDevUserIdAsync();
        await LoadHoldings();
    }

    private async Task LoadHoldings()
    {
        _loading = true;
        _holdings = await Portfolio.GetHoldings(_userId);
        _loading = false;
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters();
        var dialog = await DialogService.ShowAsync<HoldingDialog>("Add Holding", parameters);
        var result = await dialog.Result;
        Logger.LogInformation("Dialog result: Canceled={Canceled}, Data={Data}", result?.Canceled, result?.Data?.GetType().Name);
        if (result != null && !result.Canceled && result.Data is CreateHoldingRequest data)
        {
            Logger.LogInformation("Saving holding: {Ticker} qty={Qty} price={Price}", data.Ticker, data.Quantity, data.BuyPrice);
            var holding = new StockTracker.App.Models.Holding
            {
                UserId = _userId, Ticker = data.Ticker.ToUpper(), BuyDate = data.BuyDate,
                Quantity = data.Quantity, BuyPrice = data.BuyPrice, Brokerage = data.Brokerage
            };
            Db.Holdings.Add(holding);
            await Db.SaveChangesAsync();
            await LoadHoldings();
        }
    }

    private async Task OpenEditDialog(HoldingDto holding)
    {
        var parameters = new DialogParameters { { "Holding", holding } };
        var dialog = await DialogService.ShowAsync<HoldingDialog>("Edit Holding", parameters);
        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            var data = (CreateHoldingRequest)result.Data!;
            var entity = await Db.Holdings.FindAsync(holding.Id);
            if (entity != null && entity.UserId == _userId)
            {
                entity.Ticker = data.Ticker.ToUpper();
                entity.BuyDate = data.BuyDate;
                entity.Quantity = data.Quantity;
                entity.BuyPrice = data.BuyPrice;
                entity.Brokerage = data.Brokerage;
                await Db.SaveChangesAsync();
            }
            await LoadHoldings();
        }
    }

    private async Task DeleteHolding(int id)
    {
        var confirmed = await DialogService.ShowMessageBox("Delete", "Are you sure?", yesText: "Delete", cancelText: "Cancel");
        if (confirmed == true)
        {
            var entity = await Db.Holdings.FindAsync(id);
            if (entity != null && entity.UserId == _userId)
            {
                Db.Holdings.Remove(entity);
                await Db.SaveChangesAsync();
            }
            await LoadHoldings();
        }
    }
}
